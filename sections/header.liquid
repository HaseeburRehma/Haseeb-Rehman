{% schema %}
{
  "name": "header",
  "settings": [
    {
      "type": "text",
      "id": "center_text",
      "label": "Center Header Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "cart_label",
      "label": "Cart Button Text",
      "default": "CART"
    }
  ]
}
{% endschema %}

<style>
.gift-header {
  background: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.gift-header__inner {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px 32px;
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
}

.gift-header__logo img {
  max-width: 140px;
}

.gift-header__center {
  text-align: center;
  font-size: 14px;
  letter-spacing: 1px;
  font-weight: 600;
}

.gift-header__cart {
  background: #FFD600;
  color: #000;
  padding: 10px 22px;
  text-decoration: none;
  font-size: 13px;
  font-weight: 700;
  border-radius: 4px;
  transition: all .25s ease;
}

.gift-header__cart:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 18px rgba(0,0,0,.2);
}

@media (max-width: 900px) {
  .gift-header__center {
    display: none;
  }
}
</style>

<header class="gift-header">
  <div class="gift-header__inner">

    <!-- LEFT: LOGO -->
    <a href="{{ routes.root_url }}" class="gift-header__logo">
      {% if settings.logo %}
        {{ settings.logo | image_url: width: 300 | image_tag }}
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <!-- CENTER TEXT -->
    <div class="gift-header__center">
      {{ section.settings.center_text }}
    </div>

    <!-- RIGHT CART BUTTON -->
    <a href="{{ routes.cart_url }}" class="gift-header__cart">
      {{ section.settings.cart_label }}
    </a>
     <span class="cart-arrow"></span>

  </div>
</header>
